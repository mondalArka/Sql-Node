<%-include('../../../public/admin_common/head')%>
  <body id="page-top" >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        <%-include('../../../public/admin_common/sidebar')%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%-include('../../../public/admin_common/topbar')%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Popular Product</h1>
                       
                    </div>

                    <!-- Content Row -->
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        
    
                        <!-- DataTales Example -->
                       
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                              <a href="/admin/createpopular"class="btn btn-warning">Add Popular Product</a>
                           
                                   
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Product</th>
                                                <th>Image</th>
                                                <th>Operation</th>                      
                                            </tr>
                                        </thead>
                                       
                                        <tbody>
                                            <%if(product.length >0){
                                                for(let data2 of product){%>
                                            <tr>
                                                <td><%=data2.id%></td>
                                                <td><%=data2.product%></td>
                                                <td><img src="/uploads/<%=data2.img%>" alt="" height="50px" width="50px"></td>
                                                
                                                <% if(data2.status==1) {%>
                                                    <td>
                                                        <a href="/admin/deactivepopular/<%=data2.id %>" class="btn
                                                        btn-danger">Deactive</a>
                                                        <a href="/admin/deletepopular/<%=data2.id%>" class="btn btn-primary">Delete</a>
                                                </td>
                                                <% } else{%>
                                                    <td>
                                                        <a href="/admin/activepopular/<%= data2.id %>"
                                                            class="btn btn-success">Active</a>
                                                            <a href="/admin/deletepopular/<%=data2.id%>" class="btn btn-primary">Delete</a>
                                                    </td>
                                                    <% } %>
                                                    

                                                    
                                                
                                            </tr>
                                            <%}}%>
                                        
                                        </tbody>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
    
                    </div>

                    <!-- Content Row -->

                   

                    <!-- Content Row -->
                   

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%-include('../../../public/admin_common/footer')%>
            <!-- End of Footer -->

    
</body>
</html>